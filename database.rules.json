{
  "rules": {
    ".read": false,
    ".write": false,

    "chat-presence": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['displayName','lastActive'])",
        "displayName": { ".validate": "newData.isString() && newData.val().length <= 50" },
        "lastActive": { ".validate": "newData.isNumber()" },
        "$other": { ".validate": false }
      }
    },

    "chat-messages": {
      ".read": true,
      ".write": false,
      "$messageId": {
        ".validate": false
      }
    }
  }
} 