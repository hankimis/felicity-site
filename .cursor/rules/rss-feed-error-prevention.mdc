                const response = await fetch(altUrl);
                if (response.ok) {
                    const data = await response.text();
                    return parseRSSFeed(data);
                }
            } catch (error) {
                continue; // Try next alternative
            }
        }
        
        throw new Error('All alternative methods failed');
    }
}
