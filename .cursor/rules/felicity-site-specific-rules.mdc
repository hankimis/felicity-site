      this.failureCount = 0; // Reset on success
      this.lastUpdateTime = now;
      
      // Update UI efficiently
      this.updateTableData(data);
      
    } catch (error) {
      this.failureCount++;
      
      if (this.failureCount >= this.maxFailures) {
