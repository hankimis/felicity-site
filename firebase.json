{
  "hosting": {
    "site": "livechattest-35101",
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Robots-Tag",
            "value": "index, follow"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self';"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      },
      {
        "source": "/charting_library-master/**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self';"
          }
        ]
      },
      {
        "source": "/embed/**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self';"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|png|gif|webp|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "**/sitemap.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          },
          {
            "key": "Content-Type",
            "value": "application/xml"
          }
        ]
      },
      {
        "source": "**/robots.txt",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          },
          {
            "key": "Content-Type",
            "value": "text/plain"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/__/functions/v2/naverAuth",
        "destination": "https://asia-northeast3-livechattest-35101.cloudfunctions.net/naverAuth",
        "type": 302
      },
      {
        "source": "/__/functions/v2/kakaoAuth",
        "destination": "https://asia-northeast3-livechattest-35101.cloudfunctions.net/kakaoAuth",
        "type": 302
      },
      {
        "source": "/home",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/api/ai-search",
        "function": {
          "functionId": "aiSearch",
          "region": "asia-northeast3"
        }
      },
      {
        "source": "/api/ai-search-stream",
        "function": {
          "functionId": "aiSearchStream",
          "region": "asia-northeast3"
        }
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ],
      "runtimeEnvironmentVariables": {
        "ENABLE_OAUTH": "0",
        "ENABLE_AI": "0"
      }
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}